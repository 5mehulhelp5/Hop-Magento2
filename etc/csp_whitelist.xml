<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
    <policy id="script-src">
            <values>
                <!--Google-->
                <value id="googleapis" type="host">https://maps.googleapis.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="cdn-cdninstagram" type="host">*.googleapis.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="hop-points" type="host">*.adobedtm.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
