<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/improntus/hop_points" method="GET">
        <service class="Improntus\Hop\Api\PointsInterface" method="get"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/improntus/hop_estimate" method="GET">
        <service class="Improntus\Hop\Api\PointsInterface" method="estimate"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>